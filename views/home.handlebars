<link rel="stylesheet" href="/css/homePage.css">

<main>
    <div class="p-4 p-md-5 mb-4 text-body-emphasis bg-body-secondary homepage-main-banner-image">
        <div class="col-lg-6 px-0">
            <div class="homepage-main-banner-overlay">
                <h1 class="display-3">Caramel Cream Cheese Cinnamon Rolls</h1>
                <p class="lead my-3">Light and fluffy cinnamon rolls perfect for any occasion! These
                    cinnamon rolls are taken to the next level with a brown butter and caramel cream cheese
                    frosting. This recipe takes about 2.5 hours from start to finish and will make 12
                    cinnamon rolls.</p>
                <p class="lead mb-0"><a href="#" class="btn btn-primary">View Recipe</a></p>
            </div>
        </div>
    </div>
    <div class="container">

        <hr>
        <h1 class="display-4 recipe-headers" id="homepage-recipes">Recipes</h1>
        <hr>
        <div class="mb-4"></div>
        <h2 class="display-6 recipe-headers" id="homepage-breakfast">Breakfast</h2>
        <hr>
        {{> recipeCards recipes=breakfastRecipes}}
        <div class="mb-4"></div>
        
        <h2 class="display-6 recipe-headers" id="homepage-lunch">Lunch</h2>
        <hr>
        {{> recipeCards recipes=lunchRecipes}}
        <div class="mb-4"></div>
        
        <h2 class="display-6 recipe-headers" id="homepage-dinner">Dinner</h2>
        <hr>
        {{> recipeCards recipes=dinnerRecipes}}
        <div class="mb-4"></div>
        
        <h2 class="display-6 recipe-headers" id="homepage-snacks">Snacks</h2>
        <hr>
        {{> recipeCards recipes=snackRecipes}}
        <div class="mb-4"></div>
        
    </div>
</main>